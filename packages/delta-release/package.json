{
  "name": "delta-release",
  "version": "0.2.6",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "delta-release": "dist/index.js"
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsup",
    "lint": "npm run lint:static && npm run lint:format",
    "lint:format": "prettier ./src/**/*.{ts,tsx} --write",
    "lint:static": "eslint ./src/**/*.{ts,tsx} --fix",
    "release": "ts-node src/index.ts"
  },
  "dependencies": {
    "colors": "^1.4.0",
    "commander": "^8.2.0",
    "mustache": "^4.2.0",
    "semver": "^7.3.5"
  },
  "tsup": {
    "clean": true,
    "dts": true,
    "splitting": false,
    "sourcemap": true,
    "platform": "node",
    "target": "node14",
    "format": [
      "cjs",
      "esm"
    ],
    "entryPoints": [
      "src/index.ts"
    ]
  }
}
